{
  "compilerOptions": {
      "target": "ES6",
      "skipLibCheck": true,
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "baseUrl": "src",
      "outDir": "./dist",
      "rootDir": "./src",
      "sourceMap": true,
      "noImplicitAny": true,
      "strict": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "typeRoots": [
          "./src/types",
          "./node_modules/@types"
        ]
  },
  "include": ["src/**/*", "src/types/**/*", "__tests__/**/*" ]
}